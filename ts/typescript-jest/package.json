{
  "name": "typescript-jest-boilerplate",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Charles Ahmadzadeh <superzadeh@outlook.com>",
  "scripts": {
    "check-types": "npm compile:ts --noEmit",
    "test": "cross-env NODE_ENV=test jest",
    "test:cover": "npm test --coverage",
    "test:changed": "npm test --watch",
    "test:ensure-failure": "bash ./ensure-a-failing-test.sh",
    "test:update": "npm test -u",
    "test:watch": "npm test --watchAll",
    "lint": "npm lint:ts",
    "lint:ts": "tslint src/**/*.ts",
    "compile": "npm lint && npm compile:ts",
    "compile:watch": "npm compile:ts -w",
    "compile:ts": "tsc --project tsconfig.json"
  },
  "devDependencies": {
    "@types/jest": "27.0.2",
    "@types/node": "12.12.8",
    "babel-core": "6.26.3",
    "babel-jest": "24.9.0",
    "cross-env": "6.0.3",
    "jest": "27.3.1",
    "jest-mock-extended": "^2.0.4",
    "ts-jest": "27.0.7",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.7.2"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(\\.|/)(test)\\.(js|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  },
  "standard": {
    "env": [
      "node",
      "jest"
    ],
    "globals": [
      "expect"
    ]
  }
}
